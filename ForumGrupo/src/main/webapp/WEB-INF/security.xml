<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd
		http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.2.xsd">



	<http auto-config="true" use-expressions="true">
		<intercept-url pattern="/protected/*"
			access="hasAnyRole('ROLE_USER, ROLE_ADMIN')" />
		<intercept-url pattern="/*" access="permitAll" />


		<!-- senha e usuario no formulario vem como parametros de login -->
		<form-login login-page="/login" default-target-url="/protected/welcome"
			authentication-failure-url="/login?paginaErro" password-parameter="senha"
			username-parameter="login" login-processing-url="/check" />

		<logout logout-url="/login?logout" />

	</http>

	<!-- autenticação via dataSource pré configurado no spring-basico.xml -->
	<!-- <authentication-manager> -->

	<authentication-manager>
		<authentication-provider>


			<jdbc-user-service data-source-ref="dataSource"
				users-by-username-query=" select login,senha, 1 as enabled from users where login=?"
				authorities-by-username-query="select login,role from users where login=?" />

			<!-- onde role é a permissao que esta na classe usuario ou em uma tabela 
				de roles! -->

		</authentication-provider>

	</authentication-manager>



